                print(0)



7.      for a in range(0,20):
            for b in range(0,34):
                for c in range(0,100):
                    if((a*5+b*3+c/3==100)and(a+b+c==100)):
                        if(c%3==0):
                            print('鸡翁=',a,'鸡母=',b,'鸡雏=',c)


8.          n=input('请输入一串数字：')
            m=len(n)                #n表示输入的数字，m表示长度
            k=int(m/2)              #用k表示前后循环的次数
            flag=1                  #用flag判断是否出现不一致，如果有，flag=0
            for i in range(0,k+1):
                if(n[i]!=n[m-i-1]):
                    flag=0
                    break
            if(flag==1):
                print('是回文数')
            else:
                print('不是回文数')



9.          #研究break,continue的用法
            a='I like sleeping'
            for i in a:
                if(i=='i'):
                    break
                else:
                    print(i)
            for i in a:
                if(i=='i'):
                    continue
                else:
                    print(i)

10.           txt='I like slee*()__)()*&*(ping'
              for i in txt:
                  if i in "*()_&":
                      txt=txt.replace(i,"")
              print(txt)



11.           import turtle
              turtle.setup(650,350,200,200)
              turtle.penup()
              turtle.backward(250)
              turtle.pendown()
              turtle.pensize(15)
              turtle.pencolor("blue")
              turtle.right(90)
              for i in range(4):
                  turtle.circle(20,180)
                  turtle.circle(-20,180)
              turtle.circle(40,180)
              turtle.forward(40)
              turtle.circle(16,180)
              turtle.forward(40*2/3)
              turtle.done()



12.           '''
              编写程序，运行后用户输入4位整数作为年份，判断其是否为闰年。
              如果年份能被400整除，则为闰年；如果年份能被4整除但不能被100整除也为闰年。
              '''
              a=input()
              a=int(a)
              if a%400==0:
                  print ("是闰年")
              elif a%4==0 and a%100!=0:
                  print ("是闰年")
              else:
                  print ("不是闰年")
